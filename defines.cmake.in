/* 
    Platform specific
*/
#ifdef WIN32
    #define	PATHNAME_SEP	"\\"

    #define popen _popen
    #if _MSC_VER < 1900
        #define snprintf _snprintf
    #endif

    #if defined(_MSC_VER) || defined(MINGW)
        #define HAVE_VALUES_H 0
    #else
        #define HAVE_VALUES_H 1
    #endif

    #ifdef MINGW
        #define HAVE_UNISTD_H 1
    #else
        #define HAVE_UNISTD_H 0
    #endif

    #define HAVE_DUP 1
    #define HAVE_POPEN 1
    #define HAVE_STAT 1

    #define HAVE__SETJMP 1
    #define HAVE_FCNTL_H 1
    #define HAVE_FILENO 1

    #define DEF_METACHARS "; *?\t\n'\"()<>|&"
    #define DEF_METAESCAPE    ""

    #ifndef MINGW
        // disable warning about POSIX function names on Windows
        #pragma warning(disable:4996)
    #endif
#else /* UNIX */
    #define	PATHNAME_SEP	"/"
    #define TGETENT_OK  1
    #define	HAVE_SHELL	1

    #define	HAVE_DUP 1
    #define HAVE_FCNTL_H 1
